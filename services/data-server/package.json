{
  "name": "subsbuzz-data-server",
  "version": "2.0.0",
  "description": "SubsBuzz Data Server - Internal database operations and business logic",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "zod": "^3.24.2",
    "dotenv": "^17.0.0",
    "openai": "^4.98.0",
    "cors": "^2.8.5",
    "postgres": "^3.4.4",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.16.11",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.19.1",
    "typescript": "5.6.3",
    "drizzle-kit": "^0.24.0"
  }
}