# SubsBuzz Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration
# For development, leave commented to use memory storage
# DATABASE_URL=postgresql://user:password@localhost:5432/subsbuzz

# Development Mode
NODE_ENV=development
DEV_MODE=true

# Server Configuration  
PORT=5500

# OAuth Redirect URI (must match Google Console configuration)
OAUTH_REDIRECT_URI=http://127.0.0.1:5500/auth/callback